@model ManagentCinemaSystem.Models.Genre

@{
    ViewData["Title"] = "Xác nhận Xóa Thể loại";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<h3 class="text-danger">Bạn có chắc chắn muốn xóa thể loại này không?</h3>
<hr />

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div>
    <h4>Thể loại: @Model.Name</h4>
    <dl class="row mt-3">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" /> @* ID của thể loại cần xóa *@
        @Html.AntiForgeryToken() @* Quan trọng cho POST delete *@
        <div class="mt-3">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Xóa
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Hủy & Quay lại
            </a>
        </div>
    </form>
</div>