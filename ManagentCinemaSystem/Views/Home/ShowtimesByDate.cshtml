@using ManagentCinemaSystem.ViewModels.Showtime
@model List<ShowtimeViewModel>
@{
    ViewData["Title"] = "Lịch chiếu phim trong ngày";
    var selectedDate = ViewBag.SelectedDate as DateTime? ?? DateTime.Today;
    string sortBy = ViewBag.SortBy as string ?? "StartTime";
    string sortOrder = ViewBag.SortOrder as string ?? "asc";
    string nextOrder(string col) => (sortBy == col && sortOrder == "asc") ? "desc" : "asc";
}

<h3 class="mb-3">Lịch chiếu phim trong ngày</h3>

<form method="get" class="mb-3">
    <label>Chọn ngày:</label>
    <input type="date" name="date" value="@selectedDate.ToString("yyyy-MM-dd")" class="form-control" style="max-width: 250px; display: inline-block;" />
    <button type="submit" class="btn btn-primary ms-2">Xem lịch</button>
</form>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Không có suất chiếu nào cho ngày @selectedDate.ToString("dd/MM/yyyy").</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    <a href="@Url.Action("ShowtimesByDate", new { date = selectedDate.ToString("yyyy-MM-dd"), sortBy = "MovieTitle", sortOrder = nextOrder("MovieTitle") })">
                        Phim @(sortBy == "MovieTitle" ? (sortOrder == "asc" ? "▲" : "▼") : "")
                    </a>
                </th>
                <th>
                    <a href="@Url.Action("ShowtimesByDate", new { date = selectedDate.ToString("yyyy-MM-dd"), sortBy = "StartTime", sortOrder = nextOrder("StartTime") })">
                        Giờ chiếu @(sortBy == "StartTime" ? (sortOrder == "asc" ? "▲" : "▼") : "")
                    </a>
                </th>
                <th>
                    <a href="@Url.Action("ShowtimesByDate", new { date = selectedDate.ToString("yyyy-MM-dd"), sortBy = "CinemaName", sortOrder = nextOrder("CinemaName") })">
                        Rạp @(sortBy == "CinemaName" ? (sortOrder == "asc" ? "▲" : "▼") : "")
                    </a>
                </th>
                <th>
                    <a href="@Url.Action("ShowtimesByDate", new { date = selectedDate.ToString("yyyy-MM-dd"), sortBy = "RoomName", sortOrder = nextOrder("RoomName") })">
                        Phòng @(sortBy == "RoomName" ? (sortOrder == "asc" ? "▲" : "▼") : "")
                    </a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.MovieTitle</td>
                    <td>@s.StartTime.ToString("HH:mm")</td>
                    <td>@s.CinemaName</td>
                    <td>@s.RoomName</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="/Booking/SelectSeats/@s.Id">Đặt vé</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}