<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản trị Hệ thống Rạp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" /> @* File CSS riêng cho Admin nếu có *@
    <link rel="stylesheet" href="~/ManagentCinemaSystem.styles.css" asp-append-version="true" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom box-shadow mb-3">
            @* Navbar tối màu cho Admin *@
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">Admin Panel</a> @* Có thể link đến Dashboard Admin *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    @* === MENU CHO ADMIN === *@
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Trang Chủ 
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Movie" asp-action="ListMovies">
                                <i class="fas fa-film"></i> Danh sách phim
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="cinemaMgmtDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-landmark"></i> Quản lý Rạp
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="cinemaMgmtDropdown">
                                <li><a class="dropdown-item" asp-controller="Cinema" asp-action="Index">Danh sách Rạp</a></li>
                                <li><a class="dropdown-item" asp-controller="SeatType" asp-action="Index">Loại Ghế</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="movieMgmtDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-film"></i> Quản lý Phim
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="movieMgmtDropdown">
                                <li><a class="dropdown-item" asp-controller="Movie" asp-action="Index">Danh sách Phim</a></li>
                                <li><a class="dropdown-item" asp-controller="Genre" asp-action="Index">Thể loại Phim</a></li>
                                <li><a class="dropdown-item" asp-controller="Show" asp-action="Index">Quản lý Suất chiếu</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="bookingMgmtDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-ticket-alt"></i> Quản lý Đặt vé
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="bookingMgmtDropdown">
                                <li><a class="dropdown-item" asp-controller="StaffBooking" asp-action="PendingList">Xác nhận Thanh toán</a></li>
                                <li><a class="dropdown-item" asp-controller="StaffBooking" asp-action="AllBookings">Tất cả Đặt vé</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="User" asp-action="Index">
                                <i class="fas fa-users-cog"></i> Quản lý Tài khoản
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="bookingMgmtDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-ticket-alt"></i> Báo cáo thống kê
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="bookingMgmtDropdown">
                                <li><a class="dropdown-item" asp-controller="Statistics" asp-action="RevenueReport">Doanh thu</a></li>
                                <li><a class="dropdown-item" asp-controller="Statistics" asp-action="TicketSalesReport">Theo vé</a></li>
                                <li><a class="dropdown-item" asp-controller="Statistics" asp-action="MoviePerformanceReport">Theo phim</a></li>
                            </ul>
                        </li>
                    </ul>
                    @* === LOGIN/LOGOUT/PROFILE CHO ADMIN === *@
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="adminUserDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-shield"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminUserDropdown">
                                    <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index">Hồ sơ</a></li>
                                    <li><a class="dropdown-item" asp-controller="Profile" asp-action="ChangePassword">Đổi mật khẩu</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item" style="border: none; background: none; width: 100%; text-align: left;"> <i class="fas fa-sign-out-alt"></i> Đăng xuất</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        @* Admin thường không có link Login/Register ở đây vì phải đăng nhập mới vào được *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        @* Container-fluid cho Admin có thể rộng hơn *@
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-light">
        @* Footer tối màu *@
        <div class="container-fluid text-center">
            © @DateTime.Now.Year - Hệ thống Quản trị Rạp Chiếu Phim
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script> @* File JS riêng cho Admin nếu có *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>