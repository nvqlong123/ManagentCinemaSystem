@using ManagentCinemaSystem.ViewModels 
@model ShowIndexViewModel

@{
    ViewData["Title"] = "Quản lý Suất chiếu";
	Layout = "_AdminLayout"; // Sử dụng layout cho Admin
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-controller="Show" asp-action="Create" class="btn btn-primary mb-3">
        <i class="bi bi-calendar-plus"></i> Thêm suất chiếu mới
    </a>
</p>

<form asp-controller="Show" asp-action="Index" method="get" class="mb-4 p-3 border rounded bg-light">
    <div class="row g-3 align-items-end">
        <div class="col-md-4">
            <label asp-for="MovieFilter" class="form-label small">Tìm theo tên phim</label>
            <input asp-for="MovieFilter" class="form-control form-control-sm" />
        </div>
        <div class="col-md-3">
            <label asp-for="CinemaFilter" class="form-label small">Lọc theo rạp</label>
            <select asp-for="CinemaFilter" asp-items="Model.CinemaList" class="form-select form-select-sm">
                <option value="">Tất cả rạp</option>
            </select>
        </div>
        <div class="col-md-3">
            <label asp-for="DateFilter" class="form-label small">Lọc theo ngày</label>
            <input asp-for="DateFilter" type="date" class="form-control form-control-sm" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-info btn-sm w-100">
                <i class="bi bi-funnel"></i> Lọc
            </button>
        </div>
    </div>
</form>


@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">@TempData["Success"]<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">@TempData["Error"]<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
        <thead>
            <tr>
                <th>Tên phim</th>
                <th>Rạp</th>
                <th>Phòng</th>
                <th>Thời gian bắt đầu</th>
                <th>Thời gian kết thúc</th>
                <th>Thời lượng</th>
                <th style="min-width: 180px;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var show in Model.Shows)
            {
                <tr>
                    <td>@show.MovieTitle</td>
                    <td>@show.CinemaName</td>
                    <td>@show.RoomName</td>
                    <td>@show.StartTime.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@show.EndTime.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@show.MovieDuration phút</td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-controller="Show" asp-action="Details" asp-route-id="@show.Id" class="btn btn-info">Chi tiết</a>
                            <a asp-controller="Show" asp-action="Edit" asp-route-id="@show.Id" class="btn btn-primary">Sửa</a>
                            <a asp-controller="Show" asp-action="Delete" asp-route-id="@show.Id" class="btn btn-danger">Xóa</a>
                        </div>
                    </td>
                </tr>
            }
            @if (!Model.Shows.Any())
            {
                <tr>
                    <td colspan="7" class="text-center fst-italic">Không tìm thấy suất chiếu nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>