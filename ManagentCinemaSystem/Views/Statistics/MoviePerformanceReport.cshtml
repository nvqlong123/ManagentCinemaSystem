@model ManagentCinemaSystem.ViewModels.Admin.Statistics.MoviePerformanceReportViewModel

@{
    ViewData["Title"] = "Báo cáo Hiệu Suất Phim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<hr />

<form asp-action="MoviePerformanceReport" method="get" class="mb-4 p-3 border rounded bg-light">
    <div class="row g-3 align-items-end">
        <div class="col-md-4">
            <label asp-for="StartDate" class="form-label"></label>
            <input asp-for="StartDate" type="date" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="EndDate" class="form-label"></label>
            <input asp-for="EndDate" type="date" class="form-control" />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary w-100">Xem Báo cáo</button>
        </div>
    </div>
</form>

@if (Model.Performances.Any())
{
    <div class="card shadow mb-4">
        <div class="card-header">
            <h5 class="card-title">Hiệu suất phim từ @Model.StartDate.ToString("dd/MM/yyyy") đến @Model.EndDate.ToString("dd/MM/yyyy")</h5>
        </div>
        <div class="card-body">
            <div class="mb-4" style="height: 400px;">
                @* Đặt chiều cao cố định cho canvas parent *@
                <canvas id="moviePerformanceChart"></canvas>
            </div>
            <hr />
            <h4>Chi tiết:</h4>
            <table class="table table-striped table-bordered table-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Tên Phim</th>
                        <th class="text-end">Số Suất Chiếu</th>
                        <th class="text-end">Số Vé Bán</th>
                        <th class="text-end">Tổng Doanh thu (VNĐ)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Performances)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Movie" asp-action="Details" asp-route-id="@item.MovieId" target="_blank">@item.MovieTitle</a>
                                @* Link đến trang chi tiết phim cho admin hoặc customer *@
                            </td>
                            <td class="text-end">@item.TotalShows.ToString("N0")</td>
                            <td class="text-end">@item.TicketsSold.ToString("N0")</td>
                            <td class="text-end">@item.TotalRevenue.ToString("N0")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="fw-bold table-secondary">
                        <td>Tổng cộng</td>
                        <td class="text-end">@Model.Performances.Sum(p => p.TotalShows).ToString("N0")</td>
                        <td class="text-end">@Model.Performances.Sum(p => p.TicketsSold).ToString("N0")</td>
                        <td class="text-end">@Model.Performances.Sum(p => p.TotalRevenue).ToString("N0")</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">Không có dữ liệu hiệu suất phim cho khoảng thời gian đã chọn.</div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const movieTitles = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.ChartMovieTitles));
            const ticketsSoldData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.ChartTicketsSold));
            // const revenueData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.ChartRevenue)); // Nếu muốn thêm biểu đồ doanh thu

            if (movieTitles && ticketsSoldData && movieTitles.length > 0) {
                const ctx = document.getElementById('moviePerformanceChart');
                if(ctx) {
                    new Chart(ctx, {
                        type: 'bar', // hoặc 'horizontalBar'
                        data: {
                            labels: movieTitles,
                            datasets: [
                                {
                                    label: 'Số Vé Bán',
                                    data: ticketsSoldData,
                                    backgroundColor: 'rgba(255, 99, 132, 0.6)',
                                    borderColor: 'rgba(255, 99, 132, 1)',
                                    borderWidth: 1
                                },
                                // { // Ví dụ thêm dataset cho doanh thu
                                //     label: 'Doanh thu (VNĐ)',
                                //     data: revenueData,
                                //     backgroundColor: 'rgba(54, 162, 235, 0.6)',
                                //     borderColor: 'rgba(54, 162, 235, 1)',
                                //     borderWidth: 1,
                                //     yAxisID: 'y-axis-revenue' // Nếu muốn trục y thứ 2 cho doanh thu
                                // }
                            ]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            indexAxis: 'y', // Để thanh ngang nếu muốn hiển thị nhiều tên phim
                            scales: {
                                x: { // Trước đây là yAxes cho Chart.js v2
                                    beginAtZero: true,
                                    title: {
                                        display: true,
                                        text: 'Số Vé Bán'
                                    }
                                },
                                y: { // Trước đây là xAxes
                                     title: {
                                        display: true,
                                        text: 'Phim'
                                    }
                                }
                                // yAxes: [{ // Cho Chart.js v2
                                //     ticks: { beginAtZero: true }
                                // }],
                                // 'y-axis-revenue': { // Trục y thứ 2 cho doanh thu (nếu có)
                                //     type: 'linear',
                                //     display: true,
                                //     position: 'right',
                                //     grid: { drawOnChartArea: false },
                                //     ticks: {
                                //          callback: function(value) { return value.toLocaleString('vi-VN') + ' VNĐ'; }
                                //     }
                                // }
                            },
                            plugins: {
                                legend: { display: true, position: 'top' },
                                title: { display: true, text: 'Top Phim Theo Số Vé Bán' }
                            }
                        }
                    });
                }
            } else {
                console.log("No data for movie performance chart.");
            }
        });
    </script>
}