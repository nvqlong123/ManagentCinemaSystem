@using ManagentCinemaSystem.ViewModels.Admin
@model UserViewModel

@{
    ViewData["Title"] = "Xác nhận xóa người dùng";
	Layout = "_AdminLayout";
}

<h1>@ViewData["Title"]: <span class="text-danger">@Model.UserName</span></h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="alert alert-warning mt-3">
    <h5>Cảnh báo!</h5>
    <p>Bạn có chắc chắn muốn xóa vĩnh viễn người dùng <strong>@Model.Name (@Model.UserName)</strong> không?</p>
    <p class="text-danger fw-bold">Hành động này không thể hoàn tác.</p>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.Id</dd>
        <dt class="col-sm-3">Tên đăng nhập</dt>
        <dd class="col-sm-9">@Model.UserName</dd>
        <dt class="col-sm-3">Họ tên</dt>
        <dd class="col-sm-9">@Model.Name</dd>
    </dl>

    <form asp-controller="User" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        @* Id đã có trong route, không cần input hidden ở đây cho form post đến action DeleteConfirmed với route User/Delete/{id} *@
        <button type="submit" class="btn btn-danger">Xác nhận Xóa</button>
        <a asp-controller="User" asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>